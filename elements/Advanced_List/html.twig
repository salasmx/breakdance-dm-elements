<p class="dm-advanced-list__heading">{{ content.list.heading }}</p>

<ul>
  {% for item in content.list.links %}

    {% if item.icon.svgCode is empty %}
      {% set icon = '<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!-- Font Awesome Free 5.15.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free (Icons: CC BY 4.0, Fonts: SIL OFL 1.1, Code: MIT License) --><path d="M256 8C119.033 8 8 119.033 8 256s111.033 248 248 248 248-111.033 248-248S392.967 8 256 8zm0 48c110.532 0 200 89.451 200 200 0 110.532-89.451 200-200 200-110.532 0-200-89.451-200-200 0-110.532 89.451-200 200-200m140.204 130.267l-22.536-22.718c-4.667-4.705-12.265-4.736-16.97-.068L215.346 303.697l-59.792-60.277c-4.667-4.705-12.265-4.736-16.97-.069l-22.719 22.536c-4.705 4.667-4.736 12.265-.068 16.971l90.781 91.516c4.667 4.705 12.265 4.736 16.97.068l172.589-171.204c4.704-4.668 4.734-12.266.067-16.971z"/></svg>' %}
    {% else %}
      {% set icon = item.icon.svgCode %}
    {% endif %}

    <li>
      {% if item.link %}
        {{ macros.linkStart(item.link, 'dm-advanced-list__item-wrapper') }}
      {% else %}
        <div class='dm-advanced-list__item-wrapper'>
      {% endif %}
          
      {% if item.reverse_order %}
		<style>
          %%SELECTOR%% li:nth-child({{ loop.index }}) .dm-advanced-list__item-wrapper {
          	gap: {{ item.override_gap.style }};
          }
		  %%SELECTOR%% li:nth-child({{ loop.index }}) .dm-advanced-list__icon {
            align-self: flex-end;
			order: 2;
		  }
		  %%SELECTOR%% li:nth-child({{ loop.index }}) .dm-advanced-list__text {
			order: 1;
		  }
        </style>
	  {% endif %}

      {% if item.icon_or_image == 'icon' %}
        <span class='dm-advanced-list__icon'>
          {{ icon }}
      	</span>
      {% elseif item.icon_or_image == 'image' %}
        <span class='dm-advanced-list__image'>
          {{ macros.getMedia(item.image, content.content.size, content.content.lazyLoad) }}
        </span>
      {% endif %}
      <div class="dm-advanced-list__text">
        <span class='dm-advanced-list__title' {{ dataContentEditablePropertyPath('content.content.advanced_list[' ~ loop.index0 ~ '].title') }}>
          {{ item.title | default('Title') }}
        </span>
        <span class='dm-advanced-list__description' {{ dataContentEditablePropertyPath('content.content.advanced_list[' ~ loop.index0 ~ '].description') }}>
          {{ item.description }}
        </span>
        <span class='dm-advanced-list__read-more' {{ dataContentEditablePropertyPath('content.content.advanced_list[' ~ loop.index0 ~ '].read_more') }}>
          {{ item.read_more }}
        </span>
      </div>
      {% if item.link %}
        {{ macros.linkEnd() }}
      {% else %}
        </div>
      {% endif %}

    </li>

  {% endfor %}
</ul>
