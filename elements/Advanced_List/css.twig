%%SELECTOR%% {
  width: {{ design.layout.width.style }};
  background-color: {{ design.wrapper.background }};
  {{ macros.spacing_padding_all(design.wrapper.padding) }}
  {{ macros.borders_without_shadows(design.wrapper.border) }}
  {{ macros.spacing_margin_y(design.spacing) }}
}

%%SELECTOR%% .dm-advanced-list__heading {
  {{ macros.typography(design.heading.typography, globalSettings) }}
  {{ macros.background(design.heading.background) }}
  {{ macros.borders(design.heading.borders) }}
  {{ macros.spacing_all(design.heading.spacing) }}
}
%%SELECTOR%% h6:hover {
  {{ macros.typographyWithHoverableEverything(design.heading.typography) }}
}

%%SELECTOR%% ul {
 gap: {{ design.layout.space_between.style }};
}

{% if design.layout.stack == 'vertical' %}
  %%SELECTOR%% ul {
    {% if design.layout.alignment_when_vertical == 'left' %}
      align-items: flex-start;
    {% elseif design.layout.alignment_when_vertical == 'center' %}
      align-items: center;
    {% elseif design.layout.alignment_when_vertical == 'right' %}
      align-items: flex-end;
    {% endif %}
  }
{% elseif design.layout.stack == 'horizontal' %}
  %%SELECTOR%% ul {
    flex-direction: row;
    justify-content: {{ design.layout.horizontal_align | default('left') }};
    flex-wrap: wrap;
    align-items: center;
  }
{% endif %}

{% if breakpoint == design.layout.stack_vertical_at %}
  %%SELECTOR%% ul {
    flex-direction: column;
    align-items: flex-start;
    {% if design.layout.alignment_when_vertical == 'left' %}
    align-items: flex-start;
    {% elseif design.layout.alignment_when_vertical == 'center' %}
    align-items: center;
    {% elseif design.layout.alignment_when_vertical == 'right' %}
    align-items: flex-end;
    {% endif %}
  }
{% endif %}

%%SELECTOR%% li .dm-advanced-list__item-wrapper {
  gap: {{ design.layout.text_indent.style }};
}

/* ——— icons ——— */
%%SELECTOR%% li .dm-advanced-list__icon {
  color: {{ design.icon.color }};
  font-size: {{ design.icon.size.style }};
  {% if design.icon.background %}
    padding: {{ design.icon.padding.style | default('14px') }};
    border-radius: {{ design.icon.radius.style | default('0px') }};
    {{ macros.backgroundColor(design.icon.fill | default('#DBE5FFFF')) }}
  {% endif %}
  {% if design.icon.align == 'top' %}
    align-self: flex-start;
  {% elseif design.icon.align == 'center' %}
    align-self: center;
  {% elseif design.icon.align == 'bottom' %}
    align-self: flex-end;
  {% endif %}
}
%%SELECTOR%% li .dm-advanced-list__icon > svg {
  {% if design.icon.nudge.vertical.style or design.icon.nudge.horizontal.style %}
    transform: translate({{ design.icon.nudge.horizontal.style | default('0') }}, {{ design.icon.nudge.vertical.style | default('0') }});
  {% endif %}
}

%%SELECTOR%% li:hover .dm-advanced-list__icon {
  color: {{ design.icon.color_hover }};
  {% if design.icon.background %}
    {{ macros.backgroundColor(design.icon.fill_hover) }}
  {% endif %}
}

/* ——— image ——— */
%%SELECTOR%% li .dm-advanced-list__image img {
  display: block;
  width: {{ design.image.size.style | default('80px') }};
  {{ macros.borders(design.image.border) }}
}

/* ——— text ——— */
%%SELECTOR%% li .dm-advanced-list__text {
  display: block;
}

%%SELECTOR%% li .dm-advanced-list__title {
  display: block;
  {{ macros.typography(design.title, globalSettings) }}
}
%%SELECTOR%% li:hover .dm-advanced-list__title {
  {{ macros.typographyWithHoverableEverything(design.title) }}
}

%%SELECTOR%% li .dm-advanced-list__description {
  display: block;
  {{ macros.typography(design.description, globalSettings) }}
}
%%SELECTOR%% li:hover .dm-advanced-list__description {
  {{ macros.typographyWithHoverableEverything(design.description) }}
}

%%SELECTOR%% li .dm-advanced-list__read-more {
  display: block;
  {{ macros.typography(design.read_more, globalSettings) }}
}
%%SELECTOR%% li:hover .dm-advanced-list__read-more {
  {{ macros.typographyWithHoverableEverything(design.read_more) }}
}
